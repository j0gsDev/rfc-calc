{
  "env": {
    "es6": true,
    "node": true,
    "jest": true
  },
  "extends": ["plugin:security/recommended", "standard", "prettier"],
  "plugins": ["security", "import", "node", "promise", "standard", "prettier"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "semi": [2, "never"]
  }
}
